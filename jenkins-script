pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'jenkins-demo-image'
        PATH = "/usr/bin:/bin:/usr/sbin:$PATH"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TechByEdwina/jenkins-container-pipeline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Verify Image (Jenkins View)') {
            steps {
                sh 'docker images'
            }
        }

        stage('Run Container Test') {
            steps {
                sh '''
                    docker rm -f jenkins-demo-container || true
                    docker run -d --name jenkins-demo-container -p 8081:80 jenkins-demo-image
                    sleep 5
                    curl -f http://localhost:8081
                '''
            }
        }
    }

    post {
        success {
            echo 'Image kept on server for inspection'
        }
    }
}
