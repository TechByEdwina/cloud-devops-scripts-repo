pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'jenkins-demo-image'
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Cloning GitHub repository...'
                git branch: 'main',
                    url: 'https://github.com/TechByEdwina/jenkins-container-pipeline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Verify Docker Image') {
            steps {
                echo 'Verifying Docker image exists...'
                sh 'docker images | grep $DOCKER_IMAGE'
            }
        }

        stage('Run Docker Container (Test)') {
            steps {
                echo 'Running container to test image...'
                sh '''
                    docker rm -f jenkins-demo-container || true
                    docker run -d --name jenkins-demo-container -p 8081:80 $DOCKER_IMAGE
                    sleep 5
                    curl -f http://localhost:8081
                '''
            }
        }

        stage('Final Verification') {
            steps {
                echo 'Listing Docker images after pipeline...'
                sh 'docker images | grep $DOCKER_IMAGE'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully. Docker image was NOT deleted.'
        }
        failure {
            echo 'Pipeline failed. Docker image may still exist for inspection.'
        }
    }
}
