pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'jenkins-demo-image'
        CONTAINER_NAME = 'jenkins-demo-container'
        PATH = "/usr/bin:/bin:/usr/sbin:$PATH"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TechByEdwina/jenkins-container-pipeline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Verify Image Exists') {
            steps {
                sh 'docker images | grep $DOCKER_IMAGE'
            }
        }

        stage('Run Container Test') {
            steps {
                sh '''
                  docker rm -f $CONTAINER_NAME || true
                  docker run -d --name $CONTAINER_NAME -p 8081:80 $DOCKER_IMAGE
                  sleep 5
                  curl -f http://localhost:8081
                '''
            }
        }
    }

    post {
        always {
            sh '''
              docker stop $CONTAINER_NAME || true
              docker rm $CONTAINER_NAME || true
            '''
        }
    }
}
